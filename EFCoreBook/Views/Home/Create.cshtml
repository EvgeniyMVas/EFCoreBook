@model Book

@{
    ViewBag.Title = "Добавление книги";
}
<style>
    body {
        position: relative;
        margin: 0;
        height: 100vh;
        overflow: hidden;
    }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('@Url.Content("~/images/fon.jpg")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            opacity: 0.5;
            z-index: -1;
        }

    .input-validation-error {
        border: 2px solid red; 
    }
</style>

<form asp-action="Create" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название книги</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author" class="control-label">Автор</label>
        <input type="text" asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genre" class="control-label">Жанр</label>
        <input type="text" asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="number" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="col p-3"></div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-primary">Назад</a>
    </div>
</form>